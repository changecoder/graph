{
  "extends": [
    "eslint:recommended", 
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "plugins": ["html", "prettier", "@typescript-eslint", "import"],
  "rules": {
    "semi": [2,"never"],
    "no-unused-vars": 0, // @typescript-eslint/no-unused-vars
    "@typescript-eslint/no-use-before-define": [2, { "functions": false }],
  }
}